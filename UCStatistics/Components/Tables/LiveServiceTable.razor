@using MudBlazor
@using UCStatistics.Shared.DTOs

<MudTable Items="Data"
          Bordered="true"
          Striped="true"
          Hover="true"
          Breakpoint="Breakpoint.Sm"
          Class="table-responsive">
    <HeaderContent>
        <MudTh Style="font-weight: bold;">Service Name</MudTh>
        <MudTh Style="font-weight: bold;">Branch Name</MudTh>
        <MudTh Style="font-weight: bold;">Active Cashiers</MudTh>
        <MudTh Style="font-weight: bold;">Waiting Customers</MudTh>
        <MudTh Style="font-weight: bold;">Served Customers</MudTh>
        <MudTh Style="font-weight: bold;">Average Waiting Time</MudTh>
        <MudTh Style="font-weight: bold;">Average Serving Time</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Service Name">@context.ServiceName</MudTd>
        <MudTd DataLabel="Service Name">@context.OfficeName</MudTd>
        <MudTd DataLabel="Active Cashiers">@context.ActiveCashiers</MudTd>
        <MudTd DataLabel="Waiting Customers">@context.WaitingCustomers</MudTd>
        <MudTd DataLabel="Served Customers">@context.ServedCustomers</MudTd>
        <MudTd DataLabel="Average Waiting Time">@context.AvgWaitingTime.ToString("hh\\:mm\\:ss")</MudTd>
        <MudTd DataLabel="Average Serving Time">@context.AvgServingTime.ToString("hh\\:mm\\:ss")</MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudTr>
            <MudTd ColSpan="7" Class="text-center">
                No data available
            </MudTd>
        </MudTr>
    </NoRecordsContent>
</MudTable>

@code {
    [Parameter]
    public IEnumerable<LiveServiceDto> Data { get; set; } = Enumerable.Empty<LiveServiceDto>();
}
